@model Books

<h3>@Model.Title Information</h3>

<table class="table">
    <tr>
       <th>ISBN</th>
       <th>Title</th>
       <th>Author</th>
       <th>Genre</th>
       <th>Desription</th>
    </tr>
    <tr>
       <td>@Model.Id</td>
       <td>@Model.Title</td>
       <td>@Model.Author</td>
       <td>@Model.Genre</td>
       <td>@Model.Description</td>
    </tr>
</table>

<div style="display: block">
    <a href="/Books/UpdateBook/@Model.Id">Update this Book</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteBook", "Book", "Post"))
    {
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this book" />
    }
</div>