@model Books

<h2>Create a New Book</h2>

@using (Html.BeginForm("InsertBooksToDatabase", "Books", "Post"))
{
    <input asp-for="Id" type="hidden" value="" />

    <label asp-for="Title" class="control-label">Title</label>
    <input type="text" name="Title" class="form-control" value="" />

    <label asp-for="Genre" class="control-label">Genre</label>
    <input type="text" name="Genre" class="form-control" />
    
    <label asp-for="Author" class="control-label">Author</label>
    <input type="text" name="Author" class="form-control" />

    <label asp-for="Id" class="control-label">Book ID</label>
    <input type="number" step="0.01" name="Id" class="form-control" />


    <div class="form-group">
        <label for="">Select a Category</label>
        <select class="form-control" name="CategoryID" value="">
            @foreach (var cat in Model.Categories)
            {
                <option value="@cat.CategoryID">@cat.CategoryID @cat.Genre</option>
            }
        </select>
    </div>
    
    <input type="submit" value="Create Book" class="btn btn-primary" />
}